---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 650px;
    margin: 0 auto 40px;
  }

  h2 {
    margin-bottom: 6px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    section {
      margin-bottom: 30px;
      max-width: 675px;
    }

    h2 {
      line-height: 1.5;
      font-size: 2rem;
    }
  }
</style>
