---
import Section from "@/components/Section.astro";

import { skills } from "@resume";
---

<Section title="Habilidades">
  <ul class="inline-flex flex-wrap gap-2 mt-1">
    {
      skills.map((skill) => (
        <li class="rounded-md bg-[#e9e9e9] text-[#222] text-xs font-medium px-2 py-1">
          <span>{skill}</span>
        </li>
      ))
    }
  </ul>
</Section>
