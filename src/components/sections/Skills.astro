---
import Section from "@/components/Section.astro";

import { skills } from "@resume";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map((skill) => (
        <li>
          <span>{skill}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 0.1rem;
  }

  li {
    border-radius: 6px;
    background: #e9e9e9;
    color: #222;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
